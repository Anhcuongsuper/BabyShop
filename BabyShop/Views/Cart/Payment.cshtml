@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Thanh Toan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="banner-bottom">
    <div class="container">
        <table class="table">
            @if (Model.Count > 0)
            {
                <thead>
                    <tr>
                        <td>Mã sản phẩm</td>
                        <td>Tên sản phẩm</td>
                        <td>Sản phẩm</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtquantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" class="btn btn-danger btn-delete" data-id="@item.Product.ID">Xóa</a></td>

                        </tr>
                    }
                </tbody>
            }

    </div>
    <div class="group">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post)) { 
    <div class="col-6">
        <div class="form-group">
            <label>Người nhận</label>
            <input name="shipName" class="form-control" />
        </div><div class="form-group">
            <label>Điện thoại</label>
            <input name="phone" class="form-control" />
        </div><div class="form-group">
            <label>Địa chỉ</label>
            <input name="address" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input name="email" class="form-control" />
        </div>
        <button type="submit" class="btn">Gửi thông tin</button>
    </div>
        
        }
    </div>
</div>
